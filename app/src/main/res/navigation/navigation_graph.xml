<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/blankFragment">
    <fragment
        android:id="@+id/blankFragment"
        android:name="com.tz.sanga.moviestore.Fragments.HostFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_host" >
        <action
            android:id="@+id/action_blankFragment_to_firstFragment"
            app:destination="@id/firstFragment"
            app:enterAnim="@anim/left_to_right"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/to_fragment" />
        <action
            android:id="@+id/action_blankFragment_to_favoriteFargment"
            app:destination="@id/favoriteFargment"
            app:enterAnim="@anim/left_to_right"
            app:popExitAnim="@anim/to_fragment" />
    </fragment>
    <fragment
        android:id="@+id/firstFragment"
        android:name="com.tz.sanga.moviestore.Fragments.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first" >
        <argument
            android:name="overview"
            app:argType="string" />
        <argument
            android:name="path"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="movieId"
            app:argType="integer" />
        <argument
            android:name="date"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFargment"
        android:name="com.tz.sanga.moviestore.Fragments.FavoriteFragment"
        android:label="fragment_favorite_fargment"
        tools:layout="@layout/fragment_favorite" />
</navigation>